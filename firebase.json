{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
	  "package.json",
	  "package-lock.json",
	  "README.md",
	  "babel.config.js",
	  ".eslintrc.js",
	  ".browserslistrc",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
